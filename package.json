{
  "private": true,

     "name": "fluh",
  "version": "0.6.0",

  "description": "simple and easy functional reactive library with atomic push strategy",

  "author":  "Strider <strange.transistor@gmail.com>",
  "license": "ISC",

  "keywords":
  [
    "frp", "reactive", "functional-programming", "streams",
    "flyd",
    "node", "browser"
  ],

  "homepage":            "https://github.com/StreetStrider/fluh",
  "repository": { "url": "https://github.com/StreetStrider/fluh.git", "type": "git" },
  "bugs":       { "url": "https://github.com/StreetStrider/fluh/issues" },

  "engines":
  {
    "node": ">= 6"
  },

  "scripts":
  {
    "start": "node -r esm -r console-ultimate start",

    "st":   "eslint .",
    "unit": "mocha -r esm -r console-ultimate -r test/globals test/*.test.js",
    "ts":   "tsc && npm run dts",
    "dts":  "dtslint --expectOnly --localTs ./node_modules/typescript/lib test/type",
    "test": "npm run st && npm run ts && npm run unit",

    "cover": "c8 npm run unit",

    "perf": "node -r esm perf/perf",
    "leak": "node --inspect --expose-gc perf/leak",

    "build": "gulp --final --to npm",

    "example": "cd examples; node -r esm -r console-ultimate",

    "depcruise": "depcruise --exclude '^(node_modules|release|test|perf|coverage|start.js|.eslint|gulp)' --output-type dot . > graph.dot",
    "diagrams":  "diagrams dot graph.dot graph.png",
    "graph": "npm run depcruise && npm run diagrams ##### < http://viz-js.com/ >"
  },

  "files":
  [
    "lib/",
    "map/",
    "thru/",
    "index.js",
    "index.d.ts"
  ],

  "browser":
  {
    "./lib/inspect.js": "./lib/inspect.browser.js"
  },

  "dependencies":
  {
    "def-prop":
      "2"
  },

  "devDependencies":
  {
    "fluh":
      "./",


    "esm":
      "^3.2",

    "console-ultimate":
      "3",

    "raf":
      "3",


    "gulp":
      "4",
 
    "rollup":
      "2",
 
    "metalpipe":
      "https://github.com/StrangeTransistor/metalpipe.git#bccfd822c84892bca6aa3ac9c489dd9f1db0dea1",

    "metalpipe":
      "~/Projects/metalpipe",


    "eslint":
      "7",

    "js-outlander":
      "StrangeTransistor/js-outlander#2.10.0",

    "eslint-plugin-node":
      "11",


    "typescript":
      "4.5.4",

    "dtslint":
      "4",


    "mocha":
      "8",

    "chai":
      "4",

    "sinon":
      "11",


    "c8":
      "7",


    "benny":
      "^3.7",


    "dependency-cruiser":
      "10",

    "diagrams":
      "0.11",


    "flyd":
      "0.2",

    "rxjs":
      "7",

    "@most/core":
      "1.6",

    "@most/scheduler":
      "1.3",

    "@most/adapter":
      "1"
  }
}