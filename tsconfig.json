{
	"include":
	[
		"**/*.ts"
	],
	"exclude":
	[
		"release/",
		"test/",
		"examples"
	],
	"compilerOptions":
	{
		"noEmit": true,
		"pretty": true,

		"strict": true,
		"target": "ES6",
		"lib":  [ "ES6" ],

		"moduleResolution": "node",

		"paths":
		{
			"undici-types":
			[
				"./node_modules/undici-types/index.d.ts"
			],
		}
	}
}